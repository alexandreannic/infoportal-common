{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "module": "CommonJS",
    "declarationMap": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*.ts"
  ]
}